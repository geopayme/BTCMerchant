<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="420dp"
    android:background="#FF1B8AC7"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    >

    <ImageView
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo2x"
        android:gravity="center_horizontal"
	    android:layout_gravity="center_horizontal"
    	android:layout_marginTop="10dp"
    	/>

    <TextView
        android:id="@+id/about"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
	    android:layout_gravity="center_horizontal"
    	android:layout_marginTop="10dp"
    	android:textSize="22sp"
    	android:textColor="#FFFFFFFF"
    	/>

    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:layout_marginTop="30dp"
    	android:layout_gravity="center_horizontal"
    	android:gravity="center_horizontal"
    	android:orientation="horizontal"
    	>
    
    	<Button
            android:id="@+id/rate_us"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
	        android:layout_marginBottom="20dp"
            android:background="@drawable/button_generic"
        	android:text="@string/rate_us"
			android:textSize="22sp"
			android:textColor="#FF000000"
    	 	android:shadowColor="#191919"
			android:shadowDx="1"
			android:shadowDy="1"
			android:shadowRadius="1"
        />

        <Button
            android:id="@+id/support"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
	        android:layout_marginBottom="20dp"
            android:background="@drawable/button_generic"
        	android:text="@string/support"
			android:textSize="22sp"
			android:textColor="#FF000000"
    	 	android:shadowColor="#191919"
			android:shadowDx="1"
			android:shadowDy="1"
			android:shadowRadius="1"
        />
    	
    </LinearLayout>

    <Button
            android:id="@+id/free_wallet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
	        android:layout_marginBottom="20dp"
            android:background="@drawable/button_generic"
        	android:text="@string/wallet_download"
			android:textSize="22sp"
			android:textColor="#FF000000"
    	 	android:shadowColor="#191919"
			android:shadowDx="1"
			android:shadowDy="1"
			android:shadowRadius="1"
        />
    
</LinearLayout>
